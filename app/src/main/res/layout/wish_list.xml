<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/whalen"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sammy.myapplication.WishList">

    <TextView
        android:id="@+id/wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/WishValues"
        android:textAlignment="center"
        android:textColor="#e3cb30"
        android:textSize="36sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_below="@id/wish"
        android:id="@+id/wishlist"
        android:textColor="#000000"
        android:background="@color/light_blue"
        android:divider="@color/brown"
        android:dividerHeight="7px"
        android:alpha=".8">
    </ListView>

</LinearLayout>